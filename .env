# =============================================================================
# API CONFIGURATION - Economic Data Sources
# =============================================================================

# FRED (Federal Reserve Economic Data)
FRED_API_KEY=your_fred_api_key_here
FRED_BASE_URL=https://api.stlouisfed.org/fred

# Bureau of Labor Statistics (BLS)
BLS_API_KEY=your_bls_api_key_here
BLS_BASE_URL=https://api.bls.gov/publicAPI/v2

# OECD (Organisation for Economic Co-operation and Development)
OECD_BASE_URL=https://stats.oecd.org/restsdmx/sdmx.ashx/GetData

# IMF (International Monetary Fund)
IMF_BASE_URL=http://dataservices.imf.org/REST/SDMX_JSON.svc

# EIA (Energy Information Administration)
EIA_API_KEY=your_eia_api_key_here
EIA_BASE_URL=https://api.eia.gov/v2

# NASDAQ Data Link (formerly Quandl)
NASDAQ_API_KEY=your_nasdaq_api_key_here
NASDAQ_BASE_URL=https://data.nasdaq.com/api/v3

# ECB (European Central Bank)
ECB_BASE_URL=https://data-api.ecb.europa.eu/service

# World Bank
WORLD_BANK_BASE_URL=https://api.worldbank.org/v2

# ISM (Institute for Supply Management)
ISM_BASE_URL=https://www.ismworld.org/supply-management-news-and-reports/reports/ism-report-on-business/pmi/

# Alpha Vantage (backup for some indicators)
ALPHA_VANTAGE_API_KEY=your_alpha_vantage_key_here
ALPHA_VANTAGE_BASE_URL=https://www.alphavantage.co/query

# =============================================================================
# API RATE LIMITING
# =============================================================================
API_RATE_LIMIT_DELAY=1
API_MAX_RETRIES=3
API_TIMEOUT=30

# =============================================================================
# DATA UPDATE SCHEDULE
# =============================================================================
DAILY_UPDATE_HOUR=6
WEEKLY_UPDATE_DAY=monday
MONTHLY_UPDATE_DAY=1

# Airflow Flower (Celery Monitoring)
AIRFLOW_FLOWER_PORT=5555

# Django Production Settings
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1
