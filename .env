# =============================================================================
PGADMIN_EMAIL=admin@portfolio.com
PGADMIN_PASSWORD=pgadmin_secure_password_2024
PGADMIN_PORT=8080

# =============================================================================
# REDIS - Caching and Message Broker
# =============================================================================
